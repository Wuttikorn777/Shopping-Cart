          </a>
        </div>
      </form>
    </div>
  </div>

  <script>
    const userId = "<%= username %>";
    let cart = {};
    let totalAmount = 0;

    async function fetchCart() {
      try {
        const res = await fetch(`/cart/${userId}`);
        if (!res.ok) throw new Error('Failed to fetch cart');
        const data = await res.json();
        cart = data.cart || {};
      } catch (err) {
        console.error('Error fetching cart:', err);
        cart = {};
      }
    }

    async function renderCartSummary() {
      await fetchCart();
      const cartItemsSummary = document.getElementById("cartItemsSummary");
      const totalAmountElement = document.getElementById("totalAmount");
      const totalAmountInput = document.getElementById("totalAmountInput");

      cartItemsSummary.innerHTML = "";
      totalAmount = 0;

      for (let id in cart) {
        const item = cart[id];
        totalAmount += item.quantity * item.price;

        const div = document.createElement("div");
        div.className = "cart-item";
        div.innerHTML = `
          <div><strong>${item.name}</strong> - $${item.price.toFixed(2)}</div>
          <div>x${item.quantity}</div>
        `;
        cartItemsSummary.appendChild(div);
      }

      totalAmountElement.innerText = `Total: $${totalAmount.toFixed(2)}`;
      totalAmountInput.value = totalAmount.toFixed(2);
    }

    function validatePaymentMethod() {
      const paymentOptions = document.getElementsByName("paymentMethod");
      let selected = false;
      for (const option of paymentOptions) {
        if (option.checked) {
          selected = true;
          break;
        }
      }

      if (!selected) {
        alert("‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡∏ß‡∏¥‡∏ò‡∏µ‡∏Å‡∏≤‡∏£‡∏ä‡∏≥‡∏£‡∏∞‡πÄ‡∏á‡∏¥‡∏ô‡∏Å‡πà‡∏≠‡∏ô‡∏ó‡∏≥‡∏£‡∏≤‡∏¢‡∏Å‡∏≤‡∏£");
        return false;
      }

      return true;
    }

    function logout() {
      window.location.href = '/logout';
    }

    window.onload = function () {
      renderCartSummary();
    };
  </script>

</body>
</html>
